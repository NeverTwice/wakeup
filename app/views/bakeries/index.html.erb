<p id="notice"><%= notice %></p>

<h1>Bakeries</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Picture</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bakeries.each do |bakery| %>
      <tr>
        <td><%= bakery.company_name %></td>
        <td><%= bakery.picture %></td>
        <td><%= bakery.created_at %></td>
        <td><%= bakery.updated_at %></td>
        <td><%= link_to 'Show', bakery %></td>
        <td><%= link_to 'Edit', edit_bakery_path(bakery) %></td>
        <td><%= link_to 'Destroy', bakery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<section class="probootstrap-cover">
  <div class="container">
    <div class="row align-items-center text-left" style="padding-top:5em;">
      <div class="col-sm">
        <div class="probootstrap-text pt-5">
          <h1 class="probootstrap-heading text-white mb-4">My Cart</h1>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="probootstrap-section">
  <div class="container">
    <table class="table">
      <thead>
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Bakery</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.product.name %></td>
            <td><%= price_currency order.product.price %></td>
            <td><%= order.product.bakery.company_name %></td>
            <td><%= link_to 'Remove', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="container">
      <h4>Total : <b><%= price_currency current_user.price_cart %></b></h4>
    </div>
  </div>
</section>

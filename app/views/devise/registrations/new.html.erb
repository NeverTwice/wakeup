<section class="probootstrap-cover">
  <div class="container">
    <div class="row align-items-center text-left" style="padding-top:5em;">
      <div class="col-sm">
        <div class="probootstrap-text pt-5">
          <h1 class="probootstrap-heading text-white mb-4">Sign up</h1>
          <div class="probootstrap-subheading mb-5">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), class: "probootstrap-form mb-5") do |f| %>
              <%= f.error_notification %>

              <div class="row">
                <div class="col-md-6">
                  <%= f.input :firstname, required: true, autofocus: true %>
                </div>
                <div class="col-md-6">
                  <%= f.input :lastname, required: true %>
                </div>
                <div class="col-md-6">
                  <% User.roles.keys.each do |role| %>
                    <%= f.radio_button :role, role %>
                    <%= f.label :role, role %>
                  <% end %>
                </div>
                <div class="col-md-6">
                  <%= f.input :phone, required: true %>
                </div>
                <div class="col-md-12">
                  <%= f.input :email, required: true %>
                </div>
                <div class="col-md-6">
                  <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                </div>
                <div class="col-md-6">
                  <%= f.input :password_confirmation, required: true %>
                </div>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
              <div class="form-group">
                <%= f.button :submit, "Sign up", class: "btn btn-primary" %>

                <%= render "devise/shared/links" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="probootstrap-cover">
  <div class="container">
    <div class="row probootstrap-vh-75 align-items-center text-left">
      <div class="col-sm">
        <div class="probootstrap-text pt-5">
          <h1 class="probootstrap-heading text-white mb-4">Login</h1>
          <div class="probootstrap-subheading mb-5">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: "probootstrap-form mb-5") do |f| %>
              <div class="row">
                <div class="col-md-6">
                  <%= f.input :email, required: false, autofocus: true, class: "form-control", placeholder: "john.doe@gmail.com" %>
                </div>
                <div class="col-md-6">
                  <%= f.input :password, required: false, class: "form-control", placeholder: "**********"%>
                </div>
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
              <div class="form-group">
                <%= f.button :submit, "Log in" %>
              </div>
            <% end %>


            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
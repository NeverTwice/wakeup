<h1>Plannings</h1>

<table>
  <thead>
    <tr>
      <th>Open hour</th>
      <th>Close hour</th>
      <th>Bakery</th>
      <th>Week</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plannings.each do |planning| %>
      <tr>
        <td><%= planning.open_hour %></td>
        <td><%= planning.close_hour %></td>
        <td><%= planning.bakery %></td>
        <td><%= planning.week %></td>
        <td><%= link_to 'Show', planning %></td>
        <td><%= link_to 'Edit', edit_planning_path(planning) %></td>
        <td><%= link_to 'Destroy', planning, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Planning', new_planning_path %>
